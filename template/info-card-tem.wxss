
page{
  background-color: #F2F2F2
}

/* 加上弹性布局，方便控制全局 */
.info_card{
  width: 720rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto
}

.user_info{
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  padding-top: 20rpx;
  align-items:  center;
  justify-content:  space-around
}

.user_avatar{
  width: 100rpx;
  height: 100rpx;
  
}

.user_name{
  font-size: 32rpx;
  margin-left: 30rpx;
}

.follow_btn{
  margin-right: 40rpx;
  width: 180rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: #4AA8FE;
  color: white
}

.content_text{
  margin-left: 40rpx;
  margin-top: 20rpx;
  line-height: 60rpx;
  height: 100%;
  color: #333
}

.content_imgs{
  float: left;
  padding:20rpx 0;
  
}

.content_img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
}


